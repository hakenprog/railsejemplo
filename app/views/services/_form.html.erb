<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label 'precio' %>
    <%= form.text_field :costo %>
  </div>

  <!--Para que se muestren los clientes en un dropdown -->
  <div class="field">
    <%=form.label "Cliente"%>
    <%= form.collection_select(:client_id, Client.all, :id, :nombre) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
